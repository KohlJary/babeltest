{
  "version": "0.1",
  "suites": [
    {
      "name": "UserService",
      "tests": [
        {
          "target": "example.services.UserService.get_by_id",
          "description": "returns existing user",
          "given": { "user_id": 1 },
          "expect": {
            "type": "contains",
            "value": { "id": 1, "name": "Kohl" }
          }
        },
        {
          "target": "example.services.UserService.get_by_id",
          "description": "returns null for missing user",
          "given": { "user_id": 9999 },
          "expect": { "type": "null" }
        },
        {
          "target": "example.services.UserService.create",
          "description": "creates new user",
          "given": { "name": "Bob", "email": "bob@example.com" },
          "expect": {
            "type": "contains",
            "value": { "name": "Bob", "email": "bob@example.com", "active": true }
          }
        },
        {
          "target": "example.services.UserService.deactivate",
          "description": "deactivates existing user",
          "given": { "user_id": 1 },
          "expect": { "type": "true" }
        },
        {
          "target": "example.services.UserService.deactivate",
          "description": "returns false for missing user",
          "given": { "user_id": 9999 },
          "expect": { "type": "false" }
        }
      ]
    },
    {
      "name": "Calculator",
      "tests": [
        {
          "target": "example.services.Calculator.add",
          "description": "adds via zero-arg constructor class",
          "given": { "a": 5, "b": 3 },
          "expect": { "type": "exact", "value": 8 }
        },
        {
          "target": "example.services.Calculator.multiply",
          "description": "multiplies via zero-arg constructor class",
          "given": { "a": 4, "b": 7 },
          "expect": { "type": "exact", "value": 28 }
        }
      ]
    }
  ],
  "tests": []
}
